@model IEnumerable<Notepad.Models.Note>

@{
    ViewData["Title"] = "Index";
}

<h1>Public notes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create new</a>
</p>
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm mb-2">
                <div class="card">
                    <h5 class="card-header">@Html.DisplayFor(modelItem => item.Author)</h5>
                    <div class="card-body">
                        <h5 class="card-title"> @Html.DisplayFor(modelItem => item.Title)</h5>
                        <p class="card-text"> @Html.DisplayFor(modelItem => item.Body)</p>
                        <a asp-action="Details"  asp-route-id="@item.Id">View</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
